@model LibraryASPNETAlesja.DbModel.Category
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Request.IsAuthenticated)
    {
        <h2>Add a Category</h2>

        Html.BeginForm("Save", "Categories");
        {
            Html.ValidationSummary(true, "Please fix the following errors.");
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

            </div>


            @Html.HiddenFor(m => m.Id)
            @Html.AntiForgeryToken() // this method will create a token (secret code) and put it as a hidden field in this form
            // also as a cookie in user computer
            <button type="submit" class="btn btn-primary">Save</button>

        }

        @Scripts.Render("~/bundles/jqueryval")

    }
    else
    {
        Html.Partial("Guest");

    }
}


